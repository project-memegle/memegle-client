{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "lib": ["dom", "es6"],
        "skipLibCheck": true,
        "noEmit": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "types": ["jest", "node"]
    },
    "include": ["src", "setupTests.ts", "jest.config.ts"]
}